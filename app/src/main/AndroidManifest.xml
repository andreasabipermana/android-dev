<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.nusademy.nusademy"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nusademy">
        <activity
            android:name="com.nusademy.nusademy.ui.about.AboutActivity"
            android:label="@string/title_activity_about"
            android:theme="@style/Theme.Nusademy.NoActionBar"></activity>
        <activity
            android:name="com.nusademy.nusademy.ui.profile.UserProfileActivity"
            android:label="@string/title_activity_user_profile"
            android:theme="@style/Theme.Nusademy.NoActionBar" />
        <activity android:name="com.nusademy.nusademy.ui.splash.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.nusademy.nusademy.ui.home.UserHomeActivity" />
    </application>

</manifest>