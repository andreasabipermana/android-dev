<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.nusademy.ui.recruitmentTeacher.RecruitmentActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary" />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="100dp"
        android:backgroundTint="@color/primarylight"
        app:strokeColor="@color/black"
        app:strokeWidth="10dp">

        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@color/black"
            android:cropToPadding="false"
            android:spinnerMode="dropdown"
            android:textSize="14sp"
            app:cornerRadius="3dp" />

    </com.google.android.material.card.MaterialCardView>



    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="50dp"
        android:backgroundTint="@color/primarylight"
        app:strokeColor="@color/black"
        app:strokeWidth="10dp">

        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:spinnerMode="dropdown"
            android:cropToPadding="false"
            android:text="@string/subject_teacher"
            android:textSize="14sp"
            app:cornerRadius="3dp" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:backgroundTint="@color/primarylight"
        android:layout_marginHorizontal="100dp"
        android:layout_marginTop="50dp"
        app:strokeColor="@color/black"
        app:strokeWidth="10dp">

        <androidx.appcompat.widget.AppCompatSpinner
            android:layout_width="190dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:background="@color/black"
            android:outlineSpotShadowColor="@color/black"
            android:cropToPadding="false"
            android:text="@string/subject_teacher"
            android:spinnerMode="dropdown"
            android:textSize="14sp"
            app:cornerRadius="3dp" />

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_openrecruitment"
        android:layout_width="210dp"
        android:layout_marginVertical="80dp"
        android:layout_marginHorizontal="100dp"
        android:layout_height="wrap_content"
        android:cropToPadding="false"
        android:src="@drawable/shape_background"
        android:text="@string/openrecruitment_teacher"
        android:textSize="14sp" />

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginHorizontal="200dp"
        android:background="@drawable/ic_group_78" />

</LinearLayout>