<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.school_profil2.SchoolProfil2Activity">

    <ImageView
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_group_93"
        tools:ignore="ContentDescription" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="56dp">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:layout_marginHorizontal="250dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/ic_group_77" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nusademy_passion_identifier"
            style="@style/shadow"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:layout_marginHorizontal="200dp"
            android:layout_marginTop="100dp"
            android:text="@string/passion_identifier"
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/question_ready"
            android:layout_width="202dp"
            android:layout_height="62dp"
            android:layout_marginHorizontal="190dp"
            android:layout_marginTop="390dp"
            android:text="@string/question_ready"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_yesready"
            android:textAllCaps="false"
            android:layout_width="170dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="210dp"
            android:layout_marginTop="5dp"
            android:cropToPadding="false"
            android:textColor="@color/primary"
            android:backgroundTint="@color/white"
            android:src="@drawable/shape_background"
            android:text="@string/yes_ready"
            android:textSize="14sp" />

    </LinearLayout>

    <ImageView
        android:id="@+id/logo_logout"
        android:layout_marginTop="662dp"
        android:layout_marginLeft="307dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/background"
        app:srcCompat="@drawable/ic_logout"
        tools:ignore="ContentDescription" />

</androidx.constraintlayout.widget.ConstraintLayout>